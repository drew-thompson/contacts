{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@contacts/api-interface": ["libs/api-interface/src/index.ts"],
      "@contacts/common/styles": ["libs/common/styles/src/index.ts"],
      "@contacts/common/material": ["libs/common/material/src/index.ts"],
      "@contacts/contacts/ui": ["libs/contacts/ui/src/index.ts"],
      "@contacts/contacts/feature-shell": ["libs/contacts/feature-shell/src/index.ts"],
      "@contacts/contacts/feature-listing": ["libs/contacts/feature-listing/src/index.ts"],
      "@contacts/contacts/data-access": ["libs/contacts/data-access/src/index.ts"],
      "@contacts/contacts/utils": ["libs/contacts/utils/src/index.ts"],
      "@contacts/contacts/feature-detail": ["libs/contacts/feature-detail/src/index.ts"],
      "@contacts/common/utils": ["libs/common/utils/src/index.ts"],
      "@contacts/contacts/feature-edit": ["libs/contacts/feature-edit/src/index.ts"],
      "@contacts/router/data-access": ["libs/router/data-access/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
